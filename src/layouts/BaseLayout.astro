---
import "../styles/global.css";

const { title = "default"} = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" href="images/Favicon.png" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <div class="container">
            <nav>
                <a href="/" class={Astro.url.pathname === "/" ? "active" : ""}>Home</a>
                <a href="/blog" class={Astro.url.pathname === "/blog" ? "active" : ""}>Blog</a>
            </nav>
            <main>
                <slot />
            </main>
            <footer>
                <p>&copy; {new Date().getFullYear()} Flore Vanackere. Built with Astro.</p>
            </footer>
        </div>
    </body>
</html>

<style>
    footer {
        text-align: center;
        padding: 3rem 0 2rem;
        border-top: 1px solid var(--border);
        margin-top: 4rem;
        color: var(--fg-muted);
        font-size: 0.9rem;
    }
</style>
