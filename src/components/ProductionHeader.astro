---
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  year: string;
  role: string;
  company: string;
  image?: string;
  platforms?: string[];
  software?: string[];
}

const { title, year, role, company, image, platforms = [], software = [] } = Astro.props;
---

<div class="production-header-card">
  <div class="content">

    
    <div class="main-info">
      {image && (
        <div class="thumbnail">
          <img src={image} alt={title} />
        </div>
      )}
      
      <div class="details">
        <h1 class="title">{title}</h1>
        <div class="metadata-row">
          <div class="info">
            <div class="meta">
              <span class="year">{year}</span>
              <span class="dot">•</span>
              <span class="company">{company}</span>
              <span class="dot">•</span>
              <span class="role">{role}</span>
            </div>
          </div>
        </div>

        <div class="technical-info">
          {platforms.length > 0 && (
            <div class="icon-group">
              <span class="label">Platforms</span>
              <div class="icons">
                {platforms.map(p => (
                  <div class="icon-wrapper" title={p}>
                    <Icon name={p} />
                  </div>
                ))}
              </div>
            </div>
          )}
          
          {software.length > 0 && (
            <div class="icon-group">
              <span class="label">Software</span>
              <div class="icons">
                {software.map(s => (
                  <div class="icon-wrapper" title={s}>
                    <Icon name={s} />
                  </div>
                ))}
              </div>
            </div>
          )}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .production-header-card {
    background-color: var(--bg-elev);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: 1.25rem;
    margin-bottom: 2rem;
  }

  .content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--fg-primary);
    margin: 0;
    margin-bottom: 0.33rem;
    line-height: 1.2;
    word-wrap: break-word;
    overflow-wrap: break-word;
    padding-bottom: 0.33rem;
    border-bottom: 1px solid var(--border-highlight);
    width: 100%;
  }

  .main-info {
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
  }

  .thumbnail {
    width: 80px;
    height: 120px;
    flex-shrink: 0;
    border-radius: calc(var(--radius) * 0.5);
    overflow: hidden;
    background-color: #000;
  }

  .thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .details {
    flex-grow: 1;
    min-width: 0;
  }

  .metadata-row {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    width: 100%;
    margin-bottom: 0.75rem;
  }

  .info {
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
    flex-shrink: 0;
  }

  .technical-info {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
    justify-content: flex-start;
    text-align: left;
  }

  .meta {
    font-size: 0.9rem;
    color: var(--accent);
    font-weight: 600;
    display: flex;
    gap: 0.4rem;
    align-items: center;
  }

  .dot {
    opacity: 0.5;
  }

  .role {
    font-size: 0.9rem;
    color: var(--fg-muted);
    margin: 0;
  }

  .icon-group {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    align-items: flex-start;
  }

  .label {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--fg-muted);
    font-weight: 600;
    opacity: 0.8;
  }

  .icons [data-icon] {
    font-size: 1rem;
    vertical-align: middle;
    color: var(--fg-muted);
  }

  .icons {
    display: flex;
    gap: 0.5rem;
    align-items: center;
    justify-content: flex-start;
  }

  .icon-wrapper {
    font-size: 1.25rem;
    color: var(--fg-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.9;
  }

  @media (max-width: 620px) {
    .production-header-card {
      padding: 1rem;
    }

    .title {
      font-size: 1.5rem;
    }

    .main-info {
      gap: 1rem;
    }

    .thumbnail {
      width: 80px;
      height: 110px;
    }

    .metadata-row {
      gap: 0.5rem;
      margin-bottom: 1rem;
    }

    .technical-info {
      justify-content: flex-start;
      text-align: left;
    }

    .icon-group {
      align-items: flex-start;
    }

    .icons {
      justify-content: flex-start;
    }
  }

  @media (max-width: 480px) {
    .thumbnail {
      display: none;
    }
  }
</style>
