---
interface Props {
  image: string;
  title: string;
  year: string;
  role: string;
  company: string;
}

const { image, title, year, role, company } = Astro.props;
---

<div class="production-card">
  <div class="image-container">
    <img src={image} alt={title} />
  </div>
  <div class="info">
    <h3 class="title">{title}</h3>
    <p class="year">{year}</p>
    <p class="role">{role}</p>
    <p class="company">{company}</p>
  </div>
</div>

<style>
  .production-card {
    background-color: var(--bg-elev);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition: transform 0.2s ease, border-color 0.2s ease;
  }

  .production-card:hover {
    border-color: var(--accent);
    transform: translateY(-4px);
  }

  .image-container {
    aspect-ratio: 2 / 3;
    width: 100%;
    overflow: hidden;
    background-color: #000;
  }

  .image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .production-card:hover img {
    transform: scale(1.05);
  }

  .info {
    padding: 0.75rem;
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
  }

  .title {
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--fg-primary);
    margin: 0;
  }

  .year {
    font-size: 0.8rem;
    color: var(--accent);
    font-weight: 500;
  }

  .role {
    font-size: 0.8rem;
    color: var(--fg-muted);
    margin-top: 0.15rem;
  }

  .company {
    font-size: 0.75rem;
    color: var(--fg-muted);
    opacity: 0.8;
  }
</style>
