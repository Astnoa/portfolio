---
import BaseLayout from "../layouts/BaseLayout.astro";

const posts = Object.values(import.meta.glob("./blog-posts/*.md", { eager: true }));
posts.sort((a, b) => Date.parse(b.frontmatter.date) - Date.parse(a.frontmatter.date));
---

<BaseLayout title="Blog • Flore Vanackere">
  <div class="blog-container">
    <div class="header">
      <h1 class="page-title">Blog</h1>
      <p class="page-description">Thoughts, process, and updates on my work.</p>
    </div>

    <div class="posts-list">
      {posts.map((post: any) => {
        const { 
          title = "Untitled Post", 
          date = "No date", 
          author = "Flore Vanackere", 
          thumbnail, 
          description 
        } = post.frontmatter;
        
        return (
          <a href={post.url} class="post-card subtle-card">
            {thumbnail && (
              <div class="post-thumbnail">
                <img src={thumbnail} alt={title} />
              </div>
            )}
            <div class="post-content">
              <h2 class="post-title">{title}</h2>
              <div class="post-metadata">
                <span class="date">{date}</span>
                {author && <span class="dot">•</span>}
                {author && <span class="author">{author}</span>}
              </div>
              {description && <p class="post-description">{description}</p>}
            </div>
          </a>
        );
      })}
    </div>
  </div>
</BaseLayout>

<style>
  .blog-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 0;
  }

  .header {
    margin-bottom: 3rem;
    text-align: center;
  }

  .page-title {
    font-size: 3rem;
    font-weight: 700;
    color: var(--fg-primary);
    margin-bottom: 0.5rem;
  }

  .page-description {
    font-size: 1.1rem;
    color: var(--fg-muted);
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .post-card {
    display: flex;
    gap: 1.5rem;
    padding: 1.5rem;
    text-decoration: none;
    background-color: var(--bg-elev);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    transition: all 0.2s ease;
  }

  .post-card:hover {
    border-color: var(--accent);
    transform: translateY(-2px);
  }

  .post-thumbnail {
    width: 200px;
    height: 120px;
    flex-shrink: 0;
    border-radius: calc(var(--radius) * 0.5);
    overflow: hidden;
    background-color: #000;
  }

  .post-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .post-content {
    flex-grow: 1;
    min-width: 0;
  }

  .post-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--fg-primary);
    margin: 0;
    margin-bottom: 0.5rem;
  }

  .post-metadata {
    font-size: 0.9rem;
    color: var(--fg-muted);
    display: flex;
    gap: 0.5rem;
    align-items: center;
    margin-bottom: 1rem;
  }

  .dot {
    opacity: 0.5;
  }

  .post-description {
    color: var(--fg-muted);
    line-height: 1.5;
    margin: 0;
  }

  .subtle-card {
    background-color: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: calc(var(--radius) * 0.75);
  }

  @media (max-width: 620px) {
    .page-title {
      font-size: 2.2rem;
    }

    .post-card {
      flex-direction: column;
      gap: 1rem;
    }

    .post-thumbnail {
      width: 100%;
      height: 180px;
    }
  }
</style>
