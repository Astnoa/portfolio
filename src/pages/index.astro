---
import BaseLayout from "../layouts/BaseLayout.astro";
import ProductionCard from "../components/ProductionCard.astro";
import { Icon } from "astro-icon/components";

const name = "Flore Vanackere";
const title = "Senior Environment Artist";
const text = "This website is currently under construction. It will soon present a curated selection of professional work, technical experiments, and long‑form projects. ";
const linkedin = "https://linkedin.com/in/flore-vanackere";
const artstation = "https://artstation.com/florevanackere";
const mail = "flore.vanackere@hotmail.com";
const pdf = "/resume.pdf";

const productions = [
  {
    image: "src/images/fh5-rally-adventure-cover.jpg",
    title: "FH5 - Rally Adventure",
    year: "2023",
    role: "Environment Artist",
    company: "Playground Games",
    href: "/productions/fh5-rally-adventure"
  },
  {
    image: "src/images/fh5-hot-wheels-cover.jpg",
    title: "FH5 - Hot Wheels",
    year: "2022",
    role: "Environment Artist",
    company: "Playground Games",
    href: "/productions/fh5-hot-wheels"
  },
  {
    image: "src/images/fh5-cover.jpg",
    title: "Forza Horizon 5",
    year: "2021",
    role: "Environment Artist",
    company: "Playground Games",
    href: "/productions/fh5"
  },
  {
    image: "src/images/hs2-cover.jpg",
    title: "Hunting Simulator 2",
    year: "2021",
    role: "Environment Artist",
    company: "Neopica",
    href: "/productions/hs2"
  },
  {
    image: "src/images/fia-etrc-cover.jpg",
    title: "FIA ETRC",
    year: "2021",
    role: "Environment Artist",
    company: "Neopica",
    href: "/productions/fia-etrc"
  },
  {
    image: "src/images/hs-cover.jpg",
    title: "Hunting Simulator",
    year: "2021",
    role: "Environment Artist",
    company: "Neopica",
    href: "/productions/hs"
  },
  {
    image: "src/images/dos2-cover.jpg",
    title: "Divinity: Original Sin 2",
    year: "2017",
    role: "Art Intern",
    company: "Larian Studios",
    href: "/productions/dos2"
  },
];
---

<BaseLayout title="Flore Vanackere • Portfolio">
  <div class="intro-section">
    <div class="card">
      <div class="header">
        <h1 class="name">{name}</h1>
        <p class="title">{title}</p>
      </div>
      <div class="content">
        <p class="text">{text}</p>
      </div>

      <hr class="divider" />

      <div class="links">
        {linkedin && (
          <a href={linkedin} target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
            <Icon name="icon_linkedin" />
          </a>
        )}
        {artstation && (
          <a href={artstation} target="_blank" rel="noopener noreferrer" aria-label="ArtStation">
            <Icon name="icon_artstation" />
          </a>
        )}
        {mail && (
          <a href={`mailto:${mail}`} aria-label="Email">
            <Icon name="icon_email" />
          </a>
        )}
        {pdf && (
          <a href={pdf} target="_blank" rel="noopener noreferrer" aria-label="Resume PDF">
            <Icon name="icon_pdf" />
          </a>
        )}
      </div>
    </div>
  </div>

  <div class="productions-grid">
    {productions.map((prod) => (
      <ProductionCard {...prod} />
    ))}
  </div>
</BaseLayout>

<style>
  .intro-section {
    width: 100%;
    display: flex;
    justify-content: center;
    margin-bottom: 4rem;
  }

  .card {
    background-color: var(--bg-elev);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: 3rem 3rem 4rem;

    width: 100%;
    box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.5);
  }

  .productions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
    gap: 1.5rem;
    width: 100%;
    padding: 0rem;
  }

  .header {
    margin-bottom: 1.5rem;
  }

  .name {
    font-size: 2.4rem;
    font-weight: 600;
    color: var(--fg-primary);
    letter-spacing: -0.02em;
    margin-bottom: 0.5rem;
  }

  .title {
    font-size: 1rem;
    color: var(--accent);
    letter-spacing: 0.05em;
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  .text {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--fg-muted);
  }

  .divider {
    border: 0;
    border-top: 1px solid var(--border);
    margin: 2rem 0 1.5rem;
  }

  .links {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .links a {
    color: var(--fg-muted);
    transition: color 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .links a:hover {
    color: var(--fg-primary);
  }
</style>