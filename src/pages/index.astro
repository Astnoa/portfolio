---
import BaseLayout from "../layouts/BaseLayout.astro";
import ProductionCard from "../components/ProductionCard.astro";
import { Icon } from "astro-icon/components";

const name = "Flore Vanackere";
const title = "Senior Environment Artist";
const text = "Passionate about creating engaging player experiences, I work at the intersection of art and technology. I enjoy crafting meticulous and immersive worlds by sculpting, texture and asset creation. All while building strong technical foundations through problem solving, prototyping, level scripting, and procedural tool development.";
const linkedin = "http://www.linkedin.com/in/florevanackere";
const artstation = "https://www.artstation.com/florev";
const mail = "contact@florevanackere.com";
const pdf = "/FloreVanackere_Resume.pdf";

const experiences = [
  {
    company: "Playground Games",
    logo: "/images/logo-pg.png",
    title: "Senior Environment Artist",
    location: "Leamington Spa, UK",
    period: "2021 — Present",
    url: "https://playground-games.com/"
  },
  {
    company: "Neopica",
    logo: "/images/logo-neopica.png",
    title: "Environment Artist",
    location: "Ghent, BE",
    period: "2019 — 2021",
    url: "https://www.neopica.com/"
  },
  {
    company: "Larian Studios",
    logo: "/images/logo-larian.png",
    title: "Art Intern",
    location: "Ghent, BE",
    period: "2017",
    url: "https://larian.com/"
  }
];

const productions = [
  {
    image: "/images/fh5-rally-adventure-cover.jpg",
    title: "FH5 - Rally Adventure",
    year: "2023",
    role: "Environment Artist",
    company: "Playground Games",
    href: "/productions/fh5-rally-adventure"
  },
  {
    image: "/images/fh5-hot-wheels-cover.jpg",
    title: "FH5 - Hot Wheels",
    year: "2022",
    role: "Environment Artist",
    company: "Playground Games",
    href: "/productions/fh5-hot-wheels"
  },
  {
    image: "/images/fh5-cover.jpg",
    title: "Forza Horizon 5",
    year: "2021",
    role: "Environment Artist",
    company: "Playground Games",
    href: "/productions/fh5"
  },
  {
    image: "/images/hs2-cover.jpg",
    title: "Hunting Simulator 2",
    year: "2020",
    role: "Technical Environment Artist",
    company: "Neopica",
    href: "/productions/hs2"
  },
  {
    image: "/images/fia-etrc-cover.jpg",
    title: "FIA ETRC",
    year: "2019",
    role: "Level/Environment Artist",
    company: "Neopica",
    href: "/productions/fia-etrc"
  },
  {
    image: "/images/hs-cover.jpg",
    title: "Hunting Simulator",
    year: "2017",
    role: "Environment Artist",
    company: "Neopica",
    href: "/productions/hs"
  },
  {
    image: "/images/dos2-cover.jpg",
    title: "Divinity: Original Sin 2",
    year: "2017",
    role: "Art Intern",
    company: "Larian Studios",
    href: "/productions/dos2"
  },
];
---

<BaseLayout title="Flore Vanackere • Portfolio">
  <!-- intro section -->
  <div class="intro-section">
    <div class="card">
      <div class="header">
        <h1 class="name">{name}</h1>
        <p class="title">{title}</p>
      </div>
      <div class="content">
        <p class="text">{text}</p>
      </div>

      <hr class="divider" />

      <div class="links">
        {linkedin && (
          <a href={linkedin} target="_blank" rel="noopener noreferrer" aria-label="LinkedIn" class="subtle-card">
            <Icon name="icon_linkedin" />
          </a>
        )}
        {artstation && (
          <a href={artstation} target="_blank" rel="noopener noreferrer" aria-label="ArtStation" class="subtle-card">
            <Icon name="icon_artstation" />
          </a>
        )}
        {mail && (
          <a href={`mailto:${mail}`} aria-label="Email" class="subtle-card">
            <Icon name="icon_email" />
          </a>
        )}
        {pdf && (
          <a href={pdf} target="_blank" rel="noopener noreferrer" aria-label="Resume PDF" class="subtle-card">
            <Icon name="icon_pdf" />
          </a>
        )}
      </div>
    </div>
  </div>
  <!-- production grid -->
  <div class="productions-grid">
    {productions.map((prod) => (
      <ProductionCard {...prod} />
    ))}
  </div>
  <!-- experience -->
  <div class="experience">
    <div class="card">
      <div class="software">
        <ul>
          <li><Icon name="icon_unreal" /> Unreal Engine</li>
          <li><Icon name="icon_houdini" /> Houdini</li>
          <li><Icon name="icon_zbrush" /> Zbrush</li>
          <li><Icon name="icon_autodesk" /> 3ds Max</li>
          <li><Icon name="icon_substance_designer" /> Designer</li>
          <li><Icon name="icon_substance_painter" /> Painter</li>
          <li><Icon name="icon_photoshop" /> Photoshop</li>
          <li><Icon name="icon_c_plus_plus" /> C++</li>
          <li><Icon name="icon_python" /> Python</li>
          <li><Icon name="icon_unity" /> Unity</li>
          <!--<li><Icon name="icon_godot" /> Godot</li>-->
          <!--<li><Icon name="icon_blender" /> Godot</li>-->
        </ul>
      </div>
      <hr class="divider" />

      <div class="experience-list">
        {experiences.map((exp) => (
          <a href={exp.url} class="experience-item subtle-card" target="_blank" rel="noopener noreferrer">
            <div class="experience-left">
              <img src={exp.logo} alt={`${exp.company} logo`} class="company-logo" />
              <div class="experience-info">
                <div class="company-header">
                  <span class="company-name">{exp.company}</span>
                </div>
                <span class="job-title">{exp.title}</span>
                <span class="job-location">{exp.location}</span>
              </div>
            </div>
            <div class="experience-period">
              {exp.period}
            </div>
          </a>
        ))}
      </div>

    </div>
  </div>
</BaseLayout>

<style>
  ul {
    list-style-type: none;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    padding: 0;
  }
  li {
    margin: .75rem;
  }
  .software [data-icon] {
    font-size: 2rem;
    vertical-align: middle;
  }

  .intro-section {
    width: 100%;
    display: flex;
    justify-content: center;
    margin-bottom: 2rem;
  }

  .card {
    background-color: var(--bg-elev);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: 1.5rem 2rem 1.5rem;

    width: 100%;
    box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.5);
  }

  .productions-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    width: 100%;
    padding: 0rem;
    margin-bottom: 2rem;
  }

  @media (min-width: 480px) {
    .productions-grid {
      grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
    }
  }

  .header {
    margin-bottom: 1.5rem;
  }

  .name {
    font-size: 2.4rem;
    font-weight: 600;
    color: var(--fg-primary);
    letter-spacing: -0.02em;
    margin-bottom: 0.5rem;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  @media (max-width: 480px) {
    .name {
      font-size: 1.8rem;
    }
  }

  .title {
    font-size: 1rem;
    color: var(--accent);
    letter-spacing: 0.05em;
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  .text {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--fg-muted);
  }

  .divider {
    border: 0;
    border-top: 1px solid var(--border);
    margin: 2rem 0 1.5rem;
  }

  .subtle-card {
    background-color: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: calc(var(--radius) * 0.75);
    transition: all 0.2s ease;
    text-decoration: none;
  }

  .subtle-card:hover {
    background-color: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.1);
    transform: translateY(-1px);
  }

  .links {
    display: flex;
    gap: 0.75rem;
    align-items: center;
  }

  .links [data-icon] {
    font-size: 1.25rem;
  }

  .links a {
    color: var(--fg-muted);
    width: 2.5rem;
    height: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .links a:hover {
    color: var(--fg-primary);
  }

  .experience-list {
    display: flex;
    flex-direction: column;
    gap: .5rem;
  }

  .experience-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 1rem;
  }

  .experience-item:hover {
    /* Subtle card hover already handles bg/border/transform */
  }

  .experience-left {
    display: flex;
    gap: 1.25rem;
    align-items: center;
  }

  .company-logo {
    width: 2.5rem;
    height: 2.5rem;
    object-fit: contain;
    padding: 0;
  }

  .experience-info {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 0.1rem;
  }

  .company-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .company-name {
    font-weight: 600;
    color: var(--fg-primary);
    font-size: 0.95rem;
  }

  .job-title {
    color: var(--fg-muted);
    font-size: 0.85rem;
  }

  .job-location {
    display: none;
  }

  .experience-period {
    color: var(--fg-muted);
    font-size: 0.9rem;
    font-weight: 400;
  }

  @media (max-width: 768px) {
    .job-location {
      display: block;
      color: var(--fg-muted);
      font-size: 0.8rem;
      opacity: 0.7;
    }
  }

  @media (max-width: 600px) {
    .experience-item {
      flex-direction: column;
      gap: 0.75rem;
      align-items: flex-start;
      padding: 1rem;
    }

    .experience-period {
      margin-left: 3.75rem;
    }
  }
</style>