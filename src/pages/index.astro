---
import BaseLayout from "../layouts/BaseLayout.astro";
import ProductionCard from "../components/ProductionCard.astro";

const name = "Flore Vanackere";
const title = "Senior Environment Artist";
const text = "This website is currently under construction. It will soon present a curated selection of professional work, technical experiments, and long‑form projects. ";
const linkedin = "https://linkedin.com/in/flore-vanackere";
const artstation = "https://artstation.com/florevanackere";
const mail = "flore.vanackere@hotmail.com";
const pdf = "/resume.pdf";

const productions = [
  {
    image: "../public/images/fh5-rally-adventure-cover.jpg",
    title: "FH5 - Rally Adventure",
    year: "2023",
    role: "Environment Artist",
    company: "Playground Games",
  },
  {
    image: "https://placehold.co/400x600?text=Production+2",
    title: "FH5 - Hot Wheels",
    year: "2022",
    role: "Environment Artist",
    company: "Playground Games",
  },
  {
    image: "https://placehold.co/400x600?text=Production+3",
    title: "Forza Horizon 5",
    year: "2021",
    role: "Environment Artist",
    company: "Playground Games",
  },
  {
    image: "https://placehold.co/400x600?text=Production+3",
    title: "Hunting Simulator 2",
    year: "2021",
    role: "Environment Artist",
    company: "Neopica",
  },
  {
    image: "https://placehold.co/400x600?text=Production+3",
    title: "FIA ETRC",
    year: "2021",
    role: "Environment Artist",
    company: "Neopica",
  },
  {
    image: "https://placehold.co/400x600?text=Production+3",
    title: "Hunting Simulator",
    year: "2021",
    role: "Environment Artist",
    company: "Neopica",
  },
  {
    image: "https://placehold.co/400x600?text=Production+3",
    title: "Divinity: Original Sin 2",
    year: "2017",
    role: "Art Intern",
    company: "Larian Studios",
  },
];
---

<BaseLayout title="Flore Vanackere • Portfolio">
  <div class="container">
    <div class="intro-section">
      <div class="card">
        <div class="header">
          <h1 class="name">{name}</h1>
          <p class="title">{title}</p>
        </div>
        <div class="content">
          <p class="text">{text}</p>
        </div>

        <hr class="divider" />

        <div class="links">
          {linkedin && (
            <a href={linkedin} target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-linkedin"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/></svg>
            </a>
          )}
          {artstation && (
            <a href={artstation} target="_blank" rel="noopener noreferrer" aria-label="ArtStation">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-palette"><circle cx="13.5" cy="6.5" r=".5" fill="currentColor"/><circle cx="17.5" cy="10.5" r=".5" fill="currentColor"/><circle cx="8.5" cy="7.5" r=".5" fill="currentColor"/><circle cx="6.5" cy="12.5" r=".5" fill="currentColor"/><path d="M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10c.9 0 1.6-.7 1.6-1.6 0-.4-.1-.8-.4-1.1-.3-.3-.4-.7-.4-1.1 0-.9.7-1.6 1.6-1.6H17c2.8 0 5-2.2 5-5 0-4.4-4.5-8-10-8"/></svg>
            </a>
          )}
          {mail && (
            <a href={`mailto:${mail}`} aria-label="Email">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-mail"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
            </a>
          )}
          {pdf && (
            <a href={pdf} target="_blank" rel="noopener noreferrer" aria-label="Resume PDF">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-file-text"><path d="M15 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7Z"/><path d="M14 2v4a2 2 0 0 0 2 2h4"/><path d="M10 9H8"/><path d="M16 13H8"/><path d="M16 17H8"/></svg>
            </a>
          )}
        </div>
      </div>
    </div>

    <div class="productions-grid">
      {productions.map((prod) => (
        <ProductionCard {...prod} />
      ))}
    </div>
  </div>
</BaseLayout>

<style>
  .intro-section {
    width: 100%;
    display: flex;
    justify-content: center;
    margin-bottom: 4rem;
  }

  .card {
    background-color: var(--bg-elev);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: 3rem 3rem 4rem;

    width: 100%;
    max-width: var(--card-width);
    box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.5);
  }

  .productions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
    gap: 1.5rem;
    width: 100%;
    max-width: var(--card-width);
    padding: 0rem;
  }

  .header {
    margin-bottom: 1.5rem;
  }

  .name {
    font-size: 2.4rem;
    font-weight: 600;
    color: var(--fg-primary);
    letter-spacing: -0.02em;
    margin-bottom: 0.5rem;
  }

  .title {
    font-size: 1rem;
    color: var(--accent);
    letter-spacing: 0.05em;
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  .text {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--fg-muted);
  }

  .divider {
    border: 0;
    border-top: 1px solid var(--border);
    margin: 2rem 0 1.5rem;
  }

  .links {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .links a {
    color: var(--fg-muted);
    transition: color 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .links a:hover {
    color: var(--fg-primary);
  }
</style>